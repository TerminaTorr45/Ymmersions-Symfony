{# templates/team/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Équipes{% endblock %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }
    .navbar {
        background-color: rgb(215, 114, 25);
        padding: 15px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        color: white;
    }
    .navbar a {
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.2);
        transition: background 0.3s;
    }
    .navbar a:hover {
        background-color: rgba(255, 255, 255, 0.4);
    }
    .container {
        max-width: 900px;
        margin: 40px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: rgb(215, 114, 25);
    }
    .btn {
        padding: 12px 24px;
        border-radius: 5px;
        font-weight: 600;
        text-decoration: none;
        margin-bottom: 20px;
    }
    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }
    .btn-primary {
        background-color: rgb(215, 114, 25);
        border: none;
        color: white;
    }
    .btn-primary:hover {
        background-color: #d9534f;
    }
    .teams {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    .card {
        background: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }
    .card h3 {
        color: rgb(215, 114, 25);
        margin-bottom: 15px;
    }
    .card p {
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
        font-weight: 500;
        text-align: center;
        padding: 20px;
        border-radius: 5px;
    }
</style>

<!-- Navbar -->
<div class="navbar">
    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Retour</a>
</div>

<!-- Contenu des équipes -->
<div class="container">
    <h1>Liste des Équipes</h1>

    <!-- Bouton pour créer une équipe -->
    <a href="{{ path('app_team_create') }}" class="btn btn-primary">Créer une équipe</a>

    <!-- Liste des équipes -->
    <div class="teams">
        {% for team in teams %}
            <div class="card">
                <h3>{{ team.name }}</h3>
                <p>Propriétaire : {{ team.owner.name }}</p>
                <p>Nombre de joueurs : {{ team.playersCount }}</p>
                <!-- Bouton pour rejoindre l'équipe -->
                <a href="{{ path('app_team_join', {id: team.id}) }}" class="btn btn-primary">Rejoindre</a>
            </div>
        {% else %}
            <div class="alert-info">
                <p>Aucune équipe disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
