{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }
    .navbar {
        background-color: rgb(215, 114, 25);
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
    }
    .navbar img {
        height: 70px;
        margin-right: 10px;
    }
    .navbar a {
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.2);
        transition: background 0.3s;
        margin-left: 10px;
    }
    .navbar a:hover {
        background-color: rgba(255, 255, 255, 0.4);
    }
    .container {
        max-width: 900px;
        margin: 40px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .tournaments {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    .card {
        background: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .card h3 {
        margin-bottom: 10px;
    }
    .card p {
        font-size: 14px;
        color: #555;
    }
</style>

<!-- Navbar -->
<div class="navbar">
    <img src="{{ asset('images/logo.png') }}" alt="Logo">
    <div>
        <a href="{{ path('app_profil') }}">Modifier le profil</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_dashboard') }}" style="background-color: #d9534f;">Admin</a>
        {% endif %}
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
    </div>
</div>

<!-- Contenu du Dashboard -->
<div class="container">
    <h1>Bienvenue, {{ app.user.name }} !</h1>
    <p>Voici la liste des tournois disponibles.</p>

    <!-- Liste des tournois -->
    <div class="tournaments">
        {% for tournament in tournaments %}
            <div class="card">
                <h3>{{ tournament.name }}</h3>
                <p>Status : {{ tournament.status }}</p>
                <p>Début : {{ tournament.startDate|date('d/m/Y') }}</p>
            </div>
        {% else %}
            <p>Aucun tournoi disponible.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
